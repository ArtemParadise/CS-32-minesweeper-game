{
    "semi": true,
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "endOfLine": "lf",
    "insertPragma": false,
    "requirePragma": false,
    "proseWrap": "preserve",
    "singleAttributePerLine": false,
    "arrowParens": "always",
    "bracketSameLine": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "semi": true,
          "singleQuote": false,
          "printWidth": 80,
          "tabWidth": 2
        }
      }
    ]
  }